<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/appBackground">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Hello Bekie,"
        android:textSize="21sp"
        android:textColor="?attr/texts"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are you learning today?"
        android:textColor="?attr/blue"
        android:fontFamily="monospace"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"/>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSubTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="profile image"
            android:scaleType="centerCrop"
            android:src="@mipmap/cats6" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_border" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        android:background="@drawable/search_border"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                app:tint="?attr/greyOut"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/search"
                android:contentDescription="search icon"/>

            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/btnClose"
                >

                <EditText
                    android:id="@+id/etInput"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Search for any List"
                    android:textColorHint="?attr/greyOut"
                    android:alpha="0.95"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="16sp"
                    android:letterSpacing="-0.05"
                    android:fontFamily="monospace"
                    android:background="@null"
                    android:inputType="text"
                    android:importantForAutofill="no" />

            </HorizontalScrollView>

            <FrameLayout
                android:id="@+id/btnClose"
                android:layout_width="56dp"
                android:layout_marginEnd="4dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/close"
                    android:scaleType="fitCenter"
                    android:scaleX="0.45"
                    android:scaleY="0.45"
                    app:tint="?attr/textsGreyed"
                    android:background="@null"
                    android:contentDescription="clear input"
                    />
            </FrameLayout>

            <!--
            <ImageButton
                android:id="@+id/btnSliders"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@mipmap/sliders"
                android:scaleType="fitCenter"
                app:tint="?attr/textsGreyed"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="select input type"
                />
            -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


    <ListView
        android:id="@+id/lvListOfLists"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:backgroundTint="?attr/appBackground"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/list_item"/>

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="?attr/buttons"
        android:src="@drawable/plus"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="add new list"/>

</androidx.constraintlayout.widget.ConstraintLayout>