<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="?attr/appBackground">


    <FrameLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/search_border"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:paddingStart="6dp"
                app:tint="?attr/greyOut"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/back"
                android:contentDescription="back"/>

            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/btnClose"
                >

                <EditText
                    android:id="@+id/etInput"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="せんせい, sensei, teacher   "
                    android:textColorHint="?attr/greyOut"
                    android:alpha="0.8"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="18sp"
                    android:letterSpacing="-0.05"
                    android:fontFamily="monospace"
                    android:background="@null"
                    android:inputType="text"
                    android:importantForAutofill="no" />

            </HorizontalScrollView>

            <FrameLayout
                android:id="@+id/btnClose"
                android:layout_width="56dp"
                android:layout_marginEnd="4dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/close"
                    android:scaleType="fitCenter"
                    android:scaleX="0.45"
                    android:scaleY="0.45"
                    app:tint="?attr/textsGreyed"
                    android:background="@null"
                    android:contentDescription="clear input"
                    />
            </FrameLayout>

            <!--
            <ImageButton
                android:id="@+id/btnSliders"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@mipmap/sliders"
                android:scaleType="fitCenter"
                app:tint="?attr/textsGreyed"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="select input type"
                />
            -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <ListView
        android:id="@+id/lvResultsList"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        tools:listitem="@layout/search_result">

    </ListView>

    <TextView
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Tap to see more definitions and example sentences ^"
        android:textColor="?attr/greyOut"
        android:textAlignment="center"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!--
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="520dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    -->

</androidx.constraintlayout.widget.ConstraintLayout>